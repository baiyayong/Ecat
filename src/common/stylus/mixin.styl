//为元素添加1css像素的边框
border-1px(color)
  position relative;
  border none
  &:after
    content ''
    position absolute
    left 0
    bottom 0
    width 100%
    height 1px
    transform scaleY(0.5)
    background-color color
bg-image(url)
  background-image url('./'+url+'@2x.png')
  @media only screen and (-webkit-min-device-pixel-ratio:3)
    background-image url('./'+url+'@3x.png')
bg-star(url)
  background-image url('./'+url+'@2x.png')
  @media only screen and (-webkit-min-device-pixel-ratio:3)
    background-image url('./'+url+'@3x.png')
